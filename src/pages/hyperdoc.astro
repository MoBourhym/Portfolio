---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import presentation from "@/data/presentation";
import Social from "@/components/common/Social.astro";
import Tools from "@/components/common/Tools.astro";

// Social links
const email = "simobourhym01@gmail.com";
const github = "https://github.com/MoBourhym";
const linkedin = "https://www.linkedin.com/in/bourhym/";
const resumeUrl = "/resume/resume.pdf";
const coverLetterUrl = "/resume/cover-letter.pdf";

// Get the current date for the copyright
const currentYear = new Date().getFullYear();
---

<Layout title="Links | Mohammed" description="All my important links in one place">
  <main class="flex flex-col gap-10">
    <h1 class="sr-only">Mohammed's Links</h1>
    
    <!-- Main Content Grid -->
    <div class="grid md:grid-cols-3 gap-6">
      <!-- Profile Card (Left Column) -->
      <div class="md:col-span-1 flex flex-col gap-6">
        <div class="flex flex-col items-center md:items-start gap-4 p-6 border border-gray-200 dark:border-neutral-800 rounded-xl bg-gradient-to-br from-orange-500/5 to-violet-500/5 backdrop-blur-sm shadow-lg hover:shadow-xl transition-all duration-300">
          <div class="relative">
            <Image
              src={presentation.profile || "/images/me.jpeg"}
              width={120}
              height={120}
              alt={`${presentation.name || "Developer"}'s profile picture`}
              class="rounded-full border-2 border-orange-500/50"
            />
            <div class="absolute -bottom-2 -right-2 bg-white dark:bg-neutral-900 p-1 rounded-full border border-gray-200 dark:border-neutral-800">
              <Icon name="code" class="w-5 h-5 text-orange-500" />
            </div>
          </div>
          
          <div class="text-center md:text-left">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">{presentation.name || "Mohammed"}</h2>
            <p class="text-gray-600 dark:text-gray-300">{presentation.role || "Software Engineer"}</p>
          </div>
          
          <p class="text-gray-700 dark:text-gray-400 text-sm text-center md:text-left">
            {presentation.description?.replace(/\*([^*]+)\*/g, '$1') || 
              "Software Engineer with experience in web development. Currently working with NextJS and TypeScript."}
          </p>
          
          <div class="flex items-center justify-center md:justify-start gap-4 text-xl">
            <Social link={email} iconName="envelope" />
            <Social link={github} iconName="github" />
            <Social link={linkedin} iconName="linkedin" />
          </div>
        </div>
        
        <div class="p-6 border border-gray-200 dark:border-neutral-800 rounded-xl bg-gradient-to-br from-orange-500/5 to-violet-500/5 shadow-lg hover:shadow-xl transition-all duration-300">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Tech Stack</h2>
          <Tools variant="center" size="xs" linkEnabled={false} />
        </div>
      </div>
      
      <!-- Bento Grid (Right Columns) -->
      <div class="md:col-span-2">
        <div class="grid grid-cols-1 sm:grid-cols-6 auto-rows-[100px] gap-4">
          <!-- Resume - Large Card -->
          <a href={resumeUrl} target="_blank" rel="noopener noreferrer" 
             class="col-span-1 sm:col-span-3 row-span-2 p-6 border border-gray-200 dark:border-neutral-800 rounded-xl bg-gradient-to-br from-orange-500/10 to-orange-700/10 flex flex-col justify-between hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex justify-between items-start">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Resume</h3>
              <Icon name="git" class="w-8 h-8 text-orange-500" />
            </div>
            <p class="text-gray-600 dark:text-gray-400 mt-2">Download my professional resume</p>
            <div class="flex justify-end mt-auto">
              <Icon name="git" class="w-5 h-5 text-gray-500 dark:text-gray-400" />
            </div>
          </a>
          
          <!-- Cover Letter -->
          <a href={coverLetterUrl} target="_blank" rel="noopener noreferrer"
             class="col-span-1 sm:col-span-3 row-span-1 p-4 border border-gray-200 dark:border-neutral-800 rounded-xl bg-gradient-to-br from-red-500/10 to-pink-500/10 flex flex-col justify-between hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex justify-between items-start">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Cover Letter</h3>
              <Icon name="markdown" class="w-6 h-6 text-red-500" />
            </div>
            <div class="flex justify-end mt-auto">
              <Icon name="git" class="w-5 h-5 text-gray-500 dark:text-gray-400" />
            </div>
          </a>
          
          <!-- Portfolio -->
          <a href="/" 
             class="col-span-1 sm:col-span-2 row-span-1 p-4 border border-gray-200 dark:border-neutral-800 rounded-xl bg-gradient-to-br from-purple-500/10 to-indigo-500/10 flex flex-col justify-between hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex justify-between items-start">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Portfolio</h3>
              <Icon name="dashboard" class="w-6 h-6 text-purple-500" />
            </div>
            <div class="flex justify-end mt-auto">
              <Icon name="arrow-left" class="w-5 h-5 text-gray-500 dark:text-gray-400" />
            </div>
          </a>
          
          <!-- GitHub - Small Card -->
          <a href={github} target="_blank" rel="noopener noreferrer"
             class="col-span-1 sm:col-span-1 row-span-1 p-4 border border-gray-200 dark:border-neutral-800 rounded-xl bg-gradient-to-br from-gray-500/10 to-gray-700/10 flex flex-col justify-between hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex justify-center items-center h-full">
              <Icon name="github" class="w-8 h-8 text-gray-800 dark:text-gray-200" />
            </div>
          </a>
          
          <!-- LinkedIn - Small Card -->
          <a href={linkedin} target="_blank" rel="noopener noreferrer"
             class="col-span-1 sm:col-span-1 row-span-1 p-4 border border-gray-200 dark:border-neutral-800 rounded-xl bg-gradient-to-br from-blue-500/10 to-blue-700/10 flex flex-col justify-between hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex justify-center items-center h-full">
              <Icon name="linkedin" class="w-8 h-8 text-blue-600 dark:text-blue-400" />
            </div>
          </a>
          
          <!-- Hidden Job Market Mind Map - Medium Card -->
          <a href="https://mymap.ai/share/what-is-the-hidden-job-market-bDytmyzwdAfab" target="_blank" rel="noopener noreferrer"
             class="col-span-1 sm:col-span-2 row-span-1 p-4 border border-gray-200 dark:border-neutral-800 rounded-xl bg-gradient-to-br from-green-500/10 to-emerald-500/10 flex flex-col justify-between hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex justify-between items-start">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Mind Map</h3>
              <Icon name="markdown" class="w-6 h-6 text-green-500" />
            </div>
            <p class="text-gray-600 dark:text-gray-400 text-xs mt-1">Explore the concept of the hidden job market and how to access it.</p>
            <div class="flex justify-end mt-auto">
              <Icon name="git" class="w-5 h-5 text-gray-500 dark:text-gray-400" />
            </div>
          </a>
          
          <!-- Projects -->
          <a href="/#projects" 
             class="col-span-1 sm:col-span-2 row-span-1 p-4 border border-gray-200 dark:border-neutral-800 rounded-xl bg-gradient-to-br from-yellow-500/10 to-amber-500/10 flex flex-col justify-between hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex justify-between items-start">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Projects</h3>
              <Icon name="rocket" class="w-6 h-6 text-yellow-600" />
            </div>
            <div class="flex justify-end mt-auto">
              <Icon name="arrow-left" class="w-5 h-5 text-gray-500 dark:text-gray-400" />
            </div>
          </a>
          
          <!-- Experience -->
          <a href="/#experience" 
             class="col-span-1 sm:col-span-3 row-span-1 p-4 border border-gray-200 dark:border-neutral-800 rounded-xl bg-gradient-to-br from-cyan-500/10 to-teal-500/10 flex flex-col justify-between hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex justify-between items-start">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Experience</h3>
              <Icon name="briefcase" class="w-6 h-6 text-cyan-500" />
            </div>
            <div class="flex justify-end mt-auto">
              <Icon name="arrow-left" class="w-5 h-5 text-gray-500 dark:text-gray-400" />
            </div>
          </a>
          
          <!-- Certifications -->
          <a href="/#certifications" 
             class="col-span-1 sm:col-span-3 row-span-1 p-4 border border-gray-200 dark:border-neutral-800 rounded-xl bg-gradient-to-br from-amber-500/10 to-yellow-500/10 flex flex-col justify-between hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex justify-between items-start">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Certifications</h3>
              <Icon name="git" class="w-6 h-6 text-amber-500" />
            </div>
            <div class="flex justify-end mt-auto">
              <Icon name="arrow-left" class="w-5 h-5 text-gray-500 dark:text-gray-400" />
            </div>
          </a>
          
          <!-- Email - Small Card -->
          <a href={`mailto:${email}`}
             class="col-span-1 sm:col-span-1 row-span-1 p-4 border border-gray-200 dark:border-neutral-800 rounded-xl bg-gradient-to-br from-orange-500/10 to-red-500/10 flex flex-col justify-between hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex justify-center items-center h-full">
              <Icon name="envelope" class="w-8 h-8 text-orange-500" />
            </div>
          </a>
          
          <!-- Extracurricular Activities -->
          <a href="#activities" 
             class="col-span-1 sm:col-span-5 row-span-1 p-4 border border-gray-200 dark:border-neutral-800 rounded-xl bg-gradient-to-br from-violet-500/10 to-purple-500/10 flex flex-col justify-between hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex justify-between items-start">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Extracurricular Activities</h3>
              <Icon name="person" class="w-6 h-6 text-violet-500" />
            </div>
            <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">Leadership roles, volunteer work, and community involvement</p>
            <div class="flex justify-end mt-auto">
              <Icon name="arrow-left" class="w-5 h-5 text-gray-500 dark:text-gray-400" />
            </div>
          </a>
        </div>
      </div>
    </div>
    
    <footer class="text-center text-xs text-gray-500 dark:text-gray-400 mt-10">
      <p>&copy; {currentYear} {presentation.name || "Mohammed"}. All rights reserved.</p>
      <p class="mt-1 italic">This link page is only accessible via direct link.</p>
    </footer>
  </main>
</Layout>

<style>
  /* Add some animation for hover effects */
  a {
    transition: all 0.3s ease-in-out;
  }
  
  /* Ensure responsive grid adapts well on smaller screens */
  @media (max-width: 640px) {
    .auto-rows-[100px] {
      grid-auto-rows: minmax(80px, auto);
    }
  }
</style>
