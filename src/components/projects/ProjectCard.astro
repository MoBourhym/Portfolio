---
import type { Project } from "@/data/projects";

type Props = Project;

const { title, techs, description,link, isComingSoon } = Astro.props;

const formatTechs = (values: string[]) =>
  values.toString().replaceAll(",", " â€¢ ");
---

<>
  {
    isComingSoon && (
      <div class="t group flex w-full flex-col justify-between gap-2 rounded-md border border-neutral-700 p-4 md:flex-row ">
        <div class="flex flex-col gap-2">
         <h3 class="text-lg font-semibold text-gray-900 dark:text-neutral-100">{title}</h3>
            <p class="text-sm text-gray-600 dark:text-neutral-400 leading-6">{description}</p>
          <p>{formatTechs(techs)}</p>
        </div>

        <p class="w-fit rounded-md   px-4 py-1">Soon</p>
      </div>
    )
  }

  {
    !isComingSoon && (
      <a
        class="group flex w-full cursor-pointer flex-col justify-between gap-2 rounded-md border border-neutral-700 p-4 transition-all duration-300 hover:-translate-y-2 hover:border-orange-500 md:flex-row md:items-center"
        href={link}
        target="_blank"
      >
        <div class="flex flex-col gap-4 ">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-neutral-100">{title}</h3>
            <p class="text-sm text-gray-600 dark:text-neutral-400 leading-6">{description}</p>
          <p>{formatTechs(techs)}</p>
        </div>

      </a>
    )
  }
</>
